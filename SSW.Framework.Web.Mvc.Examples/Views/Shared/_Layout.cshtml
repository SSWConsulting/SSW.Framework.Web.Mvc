<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/sh")
</head>
<body>

    <div id="RootContainer" class="container-fluid" style="">

        <div class="row-fluid">
            <div id="MenuLogo"><a href="http://www.ssw.com.au/"><img src="~/Content/images/SSWLogo.png" alt="SSW"></a></div>
            <div id="UserPanel">
            </div>
            <div id="MenuBar">
                <ul>
                    <li><a href="http://nuget.org/packages/SSW.Framework.Web.Mvc/" target="_new">NuGet Package</a></li>
                    <li><a href="https://github.com/ssw-au/SSW.Framework.Web.Mvc/" target="_new">GitHub</a></li>
                    <li><a href="http://www.ssw.com.au" target="_new">SSW Website</a></li>
                    <li><a href="http://tv.ssw.com/" target="_new">SSW TV</a></li>
                </ul>

            </div>
        </div>

        <div class="row-fluid">
            <div class="span3">

                <ul id="LeftNav" class="nav nav-list">
                    <li>@Html.ActionLink("Home", "Index")</li>
                     <li class="divider"></li>
                    <li class="nav-header">Data Binding</li>
                    <li>@Html.ActionLink("Enum Extensions", "Doc", new { @view="EnumExtensions" })</li>
                    <!--<li>@Html.ActionLink("Control Model", "Doc", new { @view="ControlModel" })</li>
                    <li>@Html.ActionLink("Polymorphic Data Binder", "Doc", new { @view="PolymorphicDataBinder" })</li>-->
                    <li class="divider"></li>

                    <li class="nav-header">Validation</li>
                    <li class="divider"></li>

                    <li>@Html.ActionLink("Cache", "Doc", new { @view="Cache" })</li>
                    <li><a href="~/ApiDoc/" target="_new">API Documentation</a></li>
                </ul>
            </div>
            <div class="span9">
                @RenderBody()
            </div>
        </div>
    </div>



    

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/sh")
    @RenderSection("scripts", required: false)


    <script type="text/javascript">

        SyntaxHighlighter.all();

        $(document).ready(function () {

        });

    </script>

</body>
</html>
